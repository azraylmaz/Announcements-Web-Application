@model Announcement

@{
  ViewBag.Title = "Details";
  Layout = "_Layout";
}

<main class="text-center">
  <h1 class="h4">Announcement Detail</h1>
  <div class="card my-2">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Announcement Id: @Model.Id</li>
    <li class="list-group-item">@Model.date</li>
    <li class="list-group-item">@Model.Title</li>
    <li class="list-group-item">@Model.Text</li>
    <li class="list-group-item">Responsible Person: @Model.ResponsiblePerson</li>
  </ul>
</div>

<a asp-controller="Announcements" asp-action="List" class="btn btn-outline-warning">Announcement List</a>
</main>


