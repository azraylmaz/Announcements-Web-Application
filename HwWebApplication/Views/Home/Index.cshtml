@model List<HwWebApplication.Models.Announcement>

@{
  ViewBag.Title = "Welcome";
  Layout = "_Layout"; 
}

<main class="text-center">
<h1 class="h4 ">@ViewData["Greeting"]</h1>


<div class="card my-2">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Welcome Page</li>
    <li class="list-group-item">@ViewData["Date"]</li>
    <li class="list-group-item">There are @ViewBag.Count announcements</li>
  </ul>
</div>


<a class=" btn btn-sm btn-outline-warning" asp-controller="Announcements" asp-action="Add">Add New Announcement</a>
<a class=" btn btn-sm btn-outline-warning" asp-controller="Announcements" asp-action="List">List All Announcements</a>
</main>

